<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorYellow</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBlack</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@color/colorYellow</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@color/colorYellow</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@android:color/black</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <style name="Theme.Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SplashThema" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
